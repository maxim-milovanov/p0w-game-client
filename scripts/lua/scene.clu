-------------------------------------------------------------
-- 在当前场景中,增加一个角色,type为角色类型
function CH_Create(sceneid, type)
	local tex_id = CLU_Call("CH_Create", sceneid, type)
	if tex_id==-1 then 
	  return nil 
	end
	return tex_id
end

-- 设置角色位置
function CH_SetPos(id, x, y)
	CLU_Call("CH_SetPos", id, x, y)
end

-- 设置角色方向0-360(背向为0)
function CH_SetYaw(id, yaw)
	CLU_Call("CH_SetYaw", id, yaw)
end

