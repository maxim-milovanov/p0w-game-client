-- 创建一个场景
function SN_CreateScene(typeid, name, map_name, ui, max_cha, max_obj, max_item, max_eff)
	local tex_id = CLU_Call("SN_CreateScene", typeid, name, map_name, ui, max_cha, max_obj, max_item, max_eff) 	
	if tex_id==-1 then 
	  return nil 
	end
	return tex_id
end

